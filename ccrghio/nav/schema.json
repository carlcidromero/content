{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/carlcidromero/content/main/ccrghio/nav/index.schema.json",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "text": { "type": "string" },
          "href": {
            "type": "string",
            "anyOf": [
              { "format": "uri" },
              { "pattern": "^(?:/|\\./|\\.\\./|[a-zA-Z][a-zA-Z0-9+.-]*:).*$" }
            ]
          }
        },
        "required": ["id", "text", "href"],
        "additionalProperties": false
      }
    }
  },
  "required": ["links"],
  "additionalProperties": false
}
